<body>
   <div class="btninicio-pago">
    <a href="/" class="boton inicio">Inicio</a>
    <a href="/Pago" class="-boton pago">Contratar Servicio</a>
   </div>
   <form action="https://formsubmit.co/marsxgamer509@gmail.com" method="POST">
    <h2>Comentar</h2>
    <div class="input-group">
        <label for="name" class="grupo">Nombre</label>
        <input type="text" name="name" id="name" placeholder="Nombre" required>
        <label for="last-name" class="grupo">Apellido</label>
        <input type="text" name="last-name" id="last-name" placeholder="Apellido" required>
        <label for="email" class="grupo">Correo Electrónico</label>
        <input type="email" name="email" id="email" placeholder="Correo Electrónico" required>
        <label for="message" class="grupo">Mensaje</label>
        <textarea name="message" id="message" cols="15" rows="5" placeholder="Mensaje" required></textarea>
        <div class="form-txt">
            <a href="#">Política de Privacidad</a>
            <a href="#">Términos y Condiciones</a>
        </div>
        <input class="Botoncito" type="submit" value="Enviar">
        <input type="hidden" name="_next" value="http://localhost:3000/Comentar">
    </div>
   </form>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
